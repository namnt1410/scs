CC = gcc
CFLAGS = -g -Wall
LIBS = -lm
INCLUDES = -I../include
OBJS = dag.o ../objs/*

SCS_SOURCEFILES = scs_alpha.c scs_mmerge.c scs_greedy.c pair.c scs_graph.c scs_reduce_expand.c scs_lsearch.c mmerge.c heuristics.c 

all: scs 

scs: $(OBJS)
	$(CC) $(CFLAGS) -o scs main.c input.c $(OBJS) $(SCS_SOURCEFILES) $(LIBS) $(INCLUDES)

dag.o: dag.c
	$(CC) $(CFLAGS) $(INCLUDES) -c dag.c

clean:
	rm -f *.o *~
